@model gestion_de_catalogue.Models.Produit
@{
    ViewBag.title = "Saisie d'un produit";
}
<div class="container">
    <form method="post" asp-action="Save">
        <div class="form-group">
            @Html.LabelFor(m => m.Designation, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.Designation, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Designation, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Prix, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.Prix, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Prix, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CategorieID, new {@class = "control-label"})
            @Html.DropDownListFor(m => m.CategorieID, new
                SelectList(ViewBag.listCategories, "CategorieID", "NomCategorie"), new
                {
                    @class =
                        "form-control"
                })
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>